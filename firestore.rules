rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Specific Collection Rules (Web Portal) ---

    // Public Profiles
    match /users_collection/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Helper function to check if user has admin/staff role
    function isAdminOrStaff() {
      return request.auth != null && 
        (get(/databases/$(database)/documents/users_collection/$(request.auth.uid)).data.role in ['admin', 'staff']);
    }

    // Articles
    match /articles_collection/{articleId} {
      // Allow public read if published
      // OR if the user is the author (for editing drafts)
      // OR if the user is admin/staff
      allow read: if resource.data.editorial.status == 'published' || 
                   (request.auth != null && resource.data.editorial.author_id == request.auth.uid) ||
                   isAdminOrStaff();
      
      // Allow any auth user to create
      allow create: if request.auth != null;
      
      // Allow author to update
      // OR admin/staff to update (e.g. for publishing/rejection)
      allow update: if (request.auth != null && resource.data.editorial.author_id == request.auth.uid) || isAdminOrStaff();
      
      // Allow author to delete
      // OR admin/staff to delete
      allow delete: if (request.auth != null && resource.data.editorial.author_id == request.auth.uid) || isAdminOrStaff();
    }

    // Site Settings (Weekly Picks, etc)
    match /site_settings/{settingId} {
      allow read: if true;
      allow write: if isAdminOrStaff();
    }

    // --- Specific Collection Rules (WargaPlus App) ---

    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // --- Specific Collection Rules (WargaPlus App content) ---
    match /releases/{releaseId} {
      allow read: if request.auth != null;
    }

    // --- Global / Fallback Rules ---
    // Removed global 'read' to prevent leaking Drafts/Hidden data.
    // Admin (Bung Warga) retains super-admin write access.
    match /{document=**} {
      allow read: if false; // Deny by default
      allow write: if request.auth != null && request.auth.token.email == 'bungwarga@gmail.com';
    }
  }
}
